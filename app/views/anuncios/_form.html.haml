= form_for @anuncio do |f|
  - if @anuncio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@anuncio.errors.count, "error")} prohibited this anuncio from being saved:"
      %ul
        - @anuncio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fecha_inicio
    = f.date_select :fecha_inicio
  .field
    = f.label :fecha_fin
    = f.date_select :fecha_fin
  .field
    = f.label :ruteador
    = f.text_field :ruteador
  .actions
    = f.submit 'Save'
